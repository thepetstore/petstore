            function smsmodal(event) {
                $num = $("input[name=telephone]").val();
                $.ajax({
                    headers: { "Accept": "application/json"},
                    type: 'POST',
                    url: 'https://www.thepetstore.ae/sms.php?method=1&phone='+$num+'&event='+event,
